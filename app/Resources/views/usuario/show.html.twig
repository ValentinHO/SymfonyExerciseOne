{% extends 'layout.html.twig' %}

{% block body %}
  <div class="container">
    <h1>Usuario</h1>

    <table class="table table-hover table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Apepaterno</th>
                <td>{{ usuario.apePaterno }}</td>
            </tr>
            <tr>
                <th>Apematerno</th>
                <td>{{ usuario.apeMaterno }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ usuario.edad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-default">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-default">
            {{ form_end(delete_form) }}
        </li>
    </ul>
 </div>   
{% endblock %}
