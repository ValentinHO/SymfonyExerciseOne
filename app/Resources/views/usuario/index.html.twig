{% extends 'layout.html.twig' %}

{% block body %}
<div class="container">
    <h1>Lista de Usuarios</h1>
    
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apepaterno</th>
                <th>Apematerno</th>
                <th>Edad</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': usuario.id }) }}">{{ usuario.id }}</a></td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apePaterno }}</td>
                <td>{{ usuario.apeMaterno }}</td>
                <td>{{ usuario.edad }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuario_show', { 'id': usuario.id }) }}" class="btn btn-default">show</a>
                        </li>
                        <li>
                            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-default">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <ul>
        <li>
            <a href="{{ path('usuario_new') }}" class="btn btn-default">Create a new usuario</a>
        </li>
    </ul>
</div>
{% endblock %}
